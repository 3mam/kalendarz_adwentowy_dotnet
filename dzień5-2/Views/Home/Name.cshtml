@{
  var id = (int?)ViewData["Id"] ?? default!;
  var village = VillagesModel.Village(id);
}

<div style="font-size: 1.5rem;" class="text-center">
  Panie jak wieś <b>@village.Name</b> ma się teraz nazywać?<br>
  <form action="/village/@id/name" method="post">
    <input type="text" id="name" name="name" required="required" pattern="[A-Za-z0-9]{1,20}"><br>
    <input type="submit" value="zmień nazwę">
  </form>

</div>