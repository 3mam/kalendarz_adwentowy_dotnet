@{
  var id = (int?)ViewData["Id"] ?? default!;
  var village = VillagesModel.Village(id);
}

<div style="font-size: 1.5rem;" class="text-center">
  Panie, czy chcesz zmienić liczebność populacji wsi <b>@village.Name</b>?<br>
  <form action="/village/@id/people" method="post">
    <input type="number" id="people" name="people" required="required"><br>
    <input type="submit" value="zmień liczebność">
  </form>

</div>